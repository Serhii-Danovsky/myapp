<% if @comment.commentable_type == "Post" %>
$('#comments').append("<%= j render partial: @comment %>");
$('#comment_body').val("");
alert("You comment for Post add!");
<%else%>
$('#reply_<%= @comment.commentable_id %>').append("<%= j render partial: @comment %>");
$('#comment_body').val("");
alert("You reply for Comment add!");
<% end %>











