<%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>

    <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<div class="row">
  <div class="control-group ">
    <%= f.label :title, :class => 'col-md-1 control-label' %> 
    <div class="col-xs-6 col-md-4"> 
      <%= f.text_field :title, :class => 'form-control' , :placeholder => "It must be unique" %>
    </div>
    <%= error_span(@post[:title]) %>
  </div>
  </div>
  <br>
  <div class="row">
  <div class="control-group">
    <%= f.label :body, :class => 'col-md-1 control-label'  %>
    <div class="col-xs-6 col-md-4">
      <%= f.text_area :body, :class => 'form-control', :placeholder => "Can not be blank" %>
    </div>
    <%= error_span(@post[:body]) %>
  </div>
  </div>
  <br>
  <div class="row">
  <div class="control-group">
    <%= f.label :tags, :class => 'col-md-1 control-label' %>
    <div class="col-xs-6 col-md-4">
      <%= f.text_field :tags, :class => 'form-control', :placeholder => "Can not be blank" %>
    </div>
    <%= error_span(@post[:tags]) %>
  </div>
  </div>
<br>
<div class="row">
 <div class="col-md-1"></div>
  <div class="col-md-1"> <%= f.submit nil, :class => 'btn btn-primary' %></div>
  
  <div class="col-md-1"></div>
  <div class="col-md-1"></div>
 <div class="col-md-4"><%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            posts_path, :class => 'btn btn-danger' %></div>
 </div>
      
<% end %>


