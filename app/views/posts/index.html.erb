                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
  </div>
</div>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


