<% if notice.present? %>
 <div class="alert alert-info fade in">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong><%= notice %></strong> 
  </div>
<% end %>
<%- model_class = Post -%>
<div class="container">
<p align="center"><%=link_to image_tag("Json.png", size: "32") , request.original_url+".json" %></p>
<div class = "panel panel-success ">
<div class = "panel-heading ">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
</div>
</div>
<div class="container">
<strong><%= model_class.human_attribute_name(:title) %>:</strong>
<%= @post.title %>
<br>
<strong><%= model_class.human_attribute_name(:body) %>:</strong>
<%= @post.body %>
<br>
<strong><%= model_class.human_attribute_name(:tags) %>:</strong>
<%= @post.tags %>
<br>
<strong><%= model_class.human_attribute_name(:User_id) %>:</strong>
<%= @post.user.name %>
 <br>

<%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn btn-primary'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>