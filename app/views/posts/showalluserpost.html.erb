<% if notice.present? %>
 <div class="alert alert-info fade in">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong><%= notice %></strong>
  </div>
<% end %>
<% if @posts.count > 0 %>
<%- model_class = Post -%>
<div class="container-fluid">
    <% @posts.each_with_index do |post, index| %>

<div class="panel panel-primary">
    <div class="panel-heading"><strong><kbd><%= post.title %></kbd></strong></div>
    <div class="panel-body">
        <table class="table table-condensed">

                <tr>
                    <td align="justify"><%= post.body %></td>
                </tr>
                <tr>
                    <td><font color="#858585"><b><i><%= post.tags %></i></b></font></td>
                </tr>
                 <tr>
                    <th><p align="right">Created by <strong><kbd><%= link_to(post.user.name, user_path(post.user))  %></kbd>
                    <%= gravatar_for post.user %></strong></p></th>
                </tr>
                <tr>
                    <td align="right"><%= post.created_at.strftime("Posted on %B %d, %A, %Y at %H:%M") %> | <%= post.updated_at.strftime("Updated on %B %d, %A, %Y at %H:%M") %></td>
                </tr>
                <tr>
                    <td align="left"><button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo<%= index+1 %>">Actions</button> <%= link_to  "#{post.comments.count} Comments", post_path(post, :anchor => :comments),
                      title: "Add  comments",
                      class: "btn btn-primary" %>
  <div id="demo<%= index+1 %>" class="collapse" >
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-xs btn-success'  %>
  <%= link_to t('.show', :default => t("helpers.links.show")),
                      post_path(post), :class => 'btn btn-xs btn-warning' %>
   <button type="button" class="btn btn-xs btn-warning main" data-toggle="modal" data-target="#myModal<%= index+1 %>">Show Modal</button>
<!-- Modal -->
<div id="myModal<%= index+1 %>" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Post <%= post.id %></h4>
      </div>
      <div class="modal-body">

    <div class="panel panel-primary">
    <div class="panel-heading"><strong><kbd><%= post.title %></kbd></strong></div>
    <div class="panel-body">
        <table class="table table-condensed">
                <tr>
                    <td align="justify"><%= post.body %></td>
                </tr>
                <tr>
                    <td><font color="#858585"><b><i><%= post.tags %></i></b></font></td>
                </tr>
                 <tr>
                    <th><p align="right">Created by <strong><kbd><%= post.user.name %></kbd></strong></p></th>
                </tr>
                <tr>
                    <td align="right"><%= post.created_at.strftime("Posted on %B %d, %A, %Y at %H:%M") %> | <%= post.updated_at.strftime("Updated on %B %d, %A, %Y at %H:%M") %></td>
                </tr>
        </table>
        </div>
     </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
  </div>
</div>

        </td></td>
                </tr>
        </table>

    </div>
    </div>
<% end %>



<div class="container-fluid">
<%else%>
<div class="container">
<div class="panel panel-danger">
      <div class="panel-heading"><p align="center"><font size="5">You have not created any post.</font></p></div>
    </div>
    </div>
<div class="container">
<%end%>
<%= link_to 'Back', url_for(:back), :class => 'btn btn-primary btn-block' %>
</div>
