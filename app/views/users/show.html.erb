<div class="container-fluid">
  <h1>Profile</h1>
  <table>
    <tr>
      <td class='user-info'>
        <p><span><strong><kbd><%= "Id:  #{@user.id}" %></kbd></strong></span></p>

        <p><strong><kbd><%= "Name:  #{@user.name}" %></kbd></strong></p>

        <p><span><strong><kbd><%= "Email:  #{@user.email}" %></kbd></strong></span></p>

        <p><span><strong><kbd><%= "Favorite posts: #{@user.favorite_posts.count.to_s}" %></kbd></strong></span></p>

        <p><span><strong><kbd>User Rating</kbd>
          <% if @user.rating>0 %>
              <% @user.rating.times do |i| %>
                  <%= image_tag("rating_up.png", size: "20x20", alt: "Star") %>
              <% end %>
          <% elsif @user.rating==0 %>
              <%= image_tag("rating_down.png", size: "20x20", alt: "Star") %><%= image_tag("rating_up.png", size: "20x20", alt: "Star") %>
          <% else %>
              <% @user.rating.abs.times do |i| %>
                  <%= image_tag("rating_down.png", size: "20x20", alt: "Star") %>
              <% end %>
          <% end %> </strong></span></p>
      </td>
    </tr>
  </table>
  <h3>User posts:</h3>

  <% @user_posts.each do |post| %>
      <div class="panel panel-primary">
        <div class="panel-heading"><strong><kbd><%= post.title %></kbd></strong></div>
        <div class="panel-body">
          <table class="table table-condensed">
            <tr>
              <td align="justify"><%= post.body %></td>
            </tr>
            <tr>
              <td><font color="#858585"><b><i><%= post.tags %></i></b></font></td>
            </tr>
            <tr>
              <th><p align="right">Created by
                <strong><kbd><%= post.user.name %></kbd></strong><%= gravatar_for post.user %></p></th>
            </tr>
            <tr>
              <td align="right"><%= post.created_at.strftime("Posted on %B %d, %A, %Y at %H:%M") %>
                | <%= post.updated_at.strftime("Updated on %B %d, %A, %Y at %H:%M") %></td>
            </tr>
          </table>
        </div>
      </div>
  <% end %>
</div>
</div>
